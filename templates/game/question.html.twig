{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="question mt-5 text-center">
            <div class="row">
                <div class="col-sm">
                    <h1>Question {{ current_question_no }}<small class="text-muted">/{{ no_of_questions }}</small></h1>
                    <h2 class="h4 py-3">Who Said:</h2>

                    <blockquote class="blockquote py-3 mb-0">
                        <p>{{ question }}</p>
                        <!--<footer class="blockquote-footer">Name</footer>-->
                    </blockquote>


                </div>
            </div>
        </div>

        <div class="answers">

            {{ form_start(answer_form) }}

            {% for button in answer_form %}
                {% if loop.index0 % 2 == 0 %}
                    <div class="row">
                {% endif %}
                        <div class="col-sm-6 py-2">
                            {{ form_widget(button, {'attr': {'class': 'btn btn-primary btn-lg btn-block'}}) }}
                        </div>
                {% if loop.index0 % 2 == 1 %}
                    </div>
                {% endif %}
            {% endfor %}

            {{ form_end(answer_form) }}

        </div>

        <div class="score text-center">
            <div class="row">
                <div class="col-sm">
                    <p class="py-3">{{ score }} out of {{ no_of_questions }}</p>

                </div>
            </div>
        </div>


    </div>
{% endblock %}